</div>
<div class="main-box">
    
    <?py count_n = from_id ?>
    <?py for c_obj in c_objs: ?>
    <div class="commont-item">
        <div class="commont-avatar"><a href="/member/#{c_obj.author}">
        <?py if request.is_spider: ?>
        <img src="#{{AVATAR_URL}}#{c_obj.author}.jpg!normal" alt="#{c_obj.author}" />
        <?py else: ?>
        <img src="/static/grey.gif" data-original="#{{AVATAR_URL}}#{c_obj.author}.jpg!normal" alt="#{c_obj.author}" />
        <?py #endif ?>
        </a></div>
        <div class="commont-data">
            <div class="commont-data-date">
                <div class="float-left"><a href="/member/#{c_obj.author}">#{c_obj.author}</a> at #{date_web(c_obj.add)}</div>
                <div class="float-right">
