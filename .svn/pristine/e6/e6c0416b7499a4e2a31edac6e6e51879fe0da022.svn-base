    <?py     #endif ?>
    <div class="c"></div>
    </div>
    <?py #endif ?>    
    
</div>
<!-- comment list end -->

<script type="text/javascript">
function replyto(somebd){
    var con = document.getElementById("id-content").value;
    document.getElementsByTagName('textarea')[0].focus();
    document.getElementById("id-content").value = " @"+somebd+" " + con;
}

</script>

<?py else: ?>

